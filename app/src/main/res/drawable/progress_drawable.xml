<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp"/>
            <gradient
                    android:startColor="#e2e4e9"
                    android:centerColor="#e2e4e9"
                    android:centerY="1.0"
                    android:endColor="#e2e4e9"
                    android:angle="270"
                    />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dp"/>
                <gradient
                        android:startColor="#f27685"
                        android:centerColor="#f27685"
                        android:centerY="1.0"
                        android:endColor="#f27685"
                        android:angle="270"
                        />
            </shape>
        </clip>
    </item>
</layer-list>