<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_fragment_filter"
        android:paddingBottom="@dimen/common_medium_margin">

    <br.com.jujuhealth.widget.CustomLevel
            android:id="@+id/easy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/common_tiny_small_margin"
            app:bg="@drawable/background_item_filter_light"
            app:bg_easy="@drawable/background_item_filter_dark"
            app:bg_high="@drawable/background_item_filter_gray"
            app:bg_medium="@drawable/background_item_filter_gray"
            app:label="@string/level_easy"
            app:label_color="@color/darkGray"
            app:layout_constraintBottom_toTopOf="@id/guideline7"
            app:layout_constraintEnd_toEndOf="@id/guideline6"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/guideline5" />

    <br.com.jujuhealth.widget.CustomLevel
            android:id="@+id/medium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/common_tiny_small_margin"
            app:bg="@drawable/background_item_filter_dark"
            app:bg_easy="@drawable/background_item_filter_light"
            app:bg_high="@drawable/background_item_filter_soft_pink"
            app:bg_medium="@drawable/background_item_filter_light"
            app:label="@string/level_medium"
            app:label_color="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/guideline7"
            app:layout_constraintEnd_toEndOf="@id/guideline4"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/guideline5" />

    <br.com.jujuhealth.widget.CustomLevel
            android:id="@+id/hard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/common_tiny_small_margin"
            app:bg="@drawable/background_item_filter_dark"
            app:bg_easy="@drawable/background_item_filter_light"
            app:bg_high="@drawable/background_item_filter_light"
            app:bg_medium="@drawable/background_item_filter_light"
            app:label="@string/level_hard"
            app:label_color="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/guideline8"
            app:layout_constraintEnd_toEndOf="@id/guideline6"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/guideline7" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/common_medium_margin" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/common_medium_margin" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/common_medium_margin" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/common_medium_margin" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.70" />

    <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>