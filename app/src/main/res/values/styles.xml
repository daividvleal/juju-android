<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="AppTheme.Text.Header" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_header_size</item>
    </style>

</resources>
