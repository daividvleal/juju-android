<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Activity" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.RadioButton" parent="AppTheme">
        <item name="colorAccent">@color/yellow_selected</item>
        <item name="android:textSize">@dimen/font_medium_big_button</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="AppTheme.Text.Header" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_header_size</item>
    </style>

    <style name="AppTheme.Text.Top" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_middle_small_text_size</item>
    </style>

    <style name="AppTheme.Text.Bottom" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">@dimen/bottom_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_bottom_size</item>
    </style>

    <style name="AppTheme.Text.Middle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_middle_text_size</item>
    </style>

    <style name="AppTheme.Button.Medium.Light" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_light</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/button_padding_medium</item>
        <item name="android:paddingRight">@dimen/button_padding_medium</item>
        <item name="android:textSize">@dimen/font_size_button_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Medium.Dark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/button_padding_medium</item>
        <item name="android:paddingRight">@dimen/button_padding_medium</item>
        <item name="android:textSize">@dimen/font_size_button_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextViewInfoInput" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/font_middle_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppCompatEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_medium_big_button</item>
        <item name="android:textColorHint">@color/colorTextNotFilled</item>
        <item name="android:textColor">@color/colorTextFilled</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextCustomButtonBig" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_medium_big_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextCustomButtonSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_medium_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.MyToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
